<div class="well">
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <div class="row">
    <div class="col-sm-2">
      <%= image_tag movie.image_url, class: "img-responsive" %>
    </div>
    <div class="col-sm-4">
      <p class="small">Director: <%= movie.director %></p>
      <p class="small">Runtime: <%= movie.runtime_in_minutes %> m</p>
      <p>Rated: <%= movie.average_rating %>/10 by <%= movie.reviews.length %> reviewers.</p>
      <h4>Recent review</h4>
      <%= render movie.latest_reviews if movie.latest_reviews %>
      <%= link_to "More reviews", movie_reviews_path(movie), class: "btn btn-primary" %>
    </div>
  </div>
</div>